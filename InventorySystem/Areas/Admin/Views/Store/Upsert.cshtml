@model InventarySystem.Models.Store /* Incorporate the Store model to take directly from controller*/

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Store";
}

<form method="post">
    <div style="padding-left:15%; padding-right:15%; padding-bottom:inherit.4rem">
        <div class="row border-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        @if(Model.Id != 0)
        {
            // Update
            title = "Update Store";
            <input type="hidden" asp-for="Id" id="id"/>
        }

        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@title</h2>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Store Name" id="name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Description</label>
                <input type="text" asp-for="Description" class="form-control" placeholder="Store Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>State</label>
                <select asp-for="State" class="form-select">
                    <option value=true>Active</option>
                    <option value=false>Inactive</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div>
            @if(Model.Id != 0)
            {
                <partial name="_ButtonsUpdateAndBack" model="Model.Id"/>
            } 
            else
            {
                <partial name="_ButtonsCreateAndBack" model="Model.Id" />
            }
        </div>
  </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("name").addEventListener('change', function (){
            validateName();
        });

        function validateName()
        {
            var url = '@Url.Content("~/")' + "Admin/Store/ValidateName";
            var id = '#id';
            var name = '#name';

            $.getJSON(url, { id: $(id).val(), name: $(name).val() }, function (data) {
                $.each(data, function (key, value) {
                    if(value){
                        var name = document.getElementById("name");
                        swal("Error", "This store name already exists", "error");
                        name.value = "";
                    }
                });
            });
        }
    </script>
}

